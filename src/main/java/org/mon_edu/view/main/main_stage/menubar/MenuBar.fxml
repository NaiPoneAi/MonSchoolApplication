<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.mon_edu.view.main.main_stage.menubar.MenuBar">
    <MenuBar BorderPane.alignment="TOP_LEFT">
        <Menu mnemonicParsing="false" text="%MenuBar.menu.file">
            <MenuItem mnemonicParsing="false" onAction="#exit" text="%MenuBar.menuItem.exit" />
        </Menu>
        <Menu mnemonicParsing="false" text="%MenuBar.menu.edit">
            <MenuItem mnemonicParsing="false" text="%MenuBar.menuItem.delete" />
        </Menu>
        <Menu fx:id="help" mnemonicParsing="false" onAction="#help" text="%MenuBar.menu.help">
            <MenuItem mnemonicParsing="false" text="%MenuBar.menuItem.help" />
        </Menu>
        <Menu mnemonicParsing="false" text="%MenuBar.menu.about">
            <MenuItem mnemonicParsing="false" text="%MenuBar.menuItem.about" />
        </Menu>
        <Menu fx:id="languageMenu" mnemonicParsing="false" text="%MenuBar.menu.language">
        </Menu>
    </MenuBar>
</AnchorPane>
